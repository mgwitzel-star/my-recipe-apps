<!DOCTYPE html>
<html>
<head>
    <title>My Recipe Helper</title>
    <style>
        body { font-family: sans-serif; display: flex; gap: 20px; padding: 20px; background: #f4f4f9; }
        .card { background: white; padding: 20px; border-radius: 8px; box-shadow: 0 2px 5px rgba(0,0,0,0.1); flex: 1; }
        h2 { color: #2c3e50; }
        button { background: #27ae60; color: white; border: none; padding: 10px; border-radius: 4px; cursor: pointer; }
        button:hover { background: #219150; }
        ul { list-style: none; padding: 0; }
        li { padding: 8px 0; border-bottom: 1px solid #eee; }
        .category { font-size: 0.8em; color: #7f8c8d; text-transform: uppercase; margin-left: 10px; }
    </style>
</head>
<body>

    <div class="card">
        <h2>Recipe: Black Bean Tacos</h2>
        <ul id="recipe-list"></ul>
        <button onclick="addToGroceryList()">Add Ingredients to Shopping List</button>
    </div>

    <div class="card">
        <h2>My Grocery List</h2>
        <ul id="grocery-list"></ul>
        <button style="background:#e67e22" onclick="clearList()">Clear List</button>
    </div>

    <script>
        const recipe = [
            { item: "Black Beans", qty: "1 can", aisle: "Canned Goods" },
            { item: "Tortillas", qty: "1 pack", aisle: "Bakery" },
            { item: "Avocado", qty: "2", aisle: "Produce" },
            { item: "Lime", qty: "1", aisle: "Produce" }
        ];

        let shoppingList = [];

        // Display the recipe
        const recipeUl = document.getElementById('recipe-list');
        recipe.forEach(ing => {
            recipeUl.innerHTML += `<li>${ing.qty} ${ing.item}</li>`;
        });

        function addToGroceryList() {
            shoppingList = [...new Set([...shoppingList, ...recipe])]; // Adds ingredients
            renderGroceries();
        }

        function renderGroceries() {
            const groceryUl = document.getElementById('grocery-list');
            groceryUl.innerHTML = '';
            // Sort by aisle to make shopping faster!
            shoppingList.sort((a, b) => a.aisle.localeCompare(b.aisle));
            
            shoppingList.forEach(ing => {
                groceryUl.innerHTML += `<li><input type="checkbox"> ${ing.item} <span class="category">(${ing.aisle})</span></li>`;
            });
        }

        function clearList() {
            shoppingList = [];
            renderGroceries();
        }
    </script>
</body>
</html>
